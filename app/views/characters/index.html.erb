<h1>Smash Bros Vault</h1>

<%= form_with url: fighters_path, method: :get, local: true do %>
  <%= text_field_tag :q, @query, placeholder: "Search a character..." %>
  <%= submit_tag "Search" %>
<% end %>

<% if @wiki_image_url.present? %>
  <h2><%= @wiki_title %> (from SmashWiki)</h2>
  <img src="<%= @wiki_image_url %>" alt="<%= @wiki_title %>" style="max-width: 500px;">
<% end %>

<hr>

<h2>Your CSV / DB Results</h2>
<ul>
  <% @fighters.each do |f| %>
    <li>
      <strong><%= f.display_name %></strong>
      <!-- show any CSV fields you have -->
      <!-- example: Universe: <%= f.universe %> -->
    </li>
  <% end %>
</ul>
